{{define "yield"}}
    {{template "editform" .Yield}}
{{end}}


{{define "editform"}}
 <section class="section">
        <form action="/article/{{.ID}}/update" id="wysiwygform" method="POST">
        {{csrfField}}
            <div class=" column card is-12">
                <div class="field">
                    <label for="title" class="label">Title</label>
                    <p class="control has-icons-left has-icons-right">
                        <input class="input is-medium" 
                        type="text" 
                        id="title" 
                        name="title" 
                        placeholder="Title of Article"
                        value="{{.Title}}">
                        <span class="icon is-small is-left">
                            <i class="fas fa-pencil-alt"></i>
                        </span>
                    </p>
                </div>
                <div class="field">
                    <input type="hidden" name="body">
                    <div id="editor-container">
                    {{.BodyHTML}}
                    </div>
                </div>
                <!-- BUTTONS -->
                <div class="columns">
                    <div class="column is-two-thirds">
                        <button type='submit' 
                        id="button" 
                        class="button is-block is-medium is-info is-fullwidth">
                        Save
                        </button>
                    </div>
                    <div class="column auto">
                        <a href="/user/articles" class="button is-medium is-white is-block is-fullwidth">
                        Cancel
                        </a>
                    </div>
                </div>
                </button>
            </div>
        </form>
        <div class="column">
    </section>


    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>

{{end}}